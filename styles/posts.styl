#posts-list
  min-width: 700px
  flex: 1
  flex-grow: 1
  width: 100%
  position: relative
  border-right: 1px solid $border-color
  padding-top: 40px
  #posts-header
    height: 40px
    border-bottom: 1px solid $border-color
    width: 100%
    top: 0
    position: absolute
    #search
      width: calc(100% - 560px)
      outline: none
      height: 24px
      border: 1px solid $border-color
      border-radius: 12px
      position: absolute
      right: 40px
      top: 8px
      padding-left: 10px
      font-size: 12px
      &:active, &:focus
        border-color: $green
    #search-icon
      position: absolute
      background-image: url(../images/svg/magnifying-glass.svg)
      opacity: 0.3
      width: 16px
      height: 16px
      background-size: 16px
      right: 14px
      top: 11px
    #posts-filter
      padding-left: 16px
      .filter
        float: left
        line-height: 40px
        margin: 0 16px
        padding: 0 8px
        text-transform: uppercase
        font-size: 12px
        color: #959595
        cursor: pointer
        &:hover
          color: $text-gray - #444
        &.active
          border-bottom: 4px solid $green
          line-height: 32px
          padding-top: 4px
          color: #000
          &:hover
            border-bottom: 4px solid ($green + #111)
            line-height: 32px
            padding-top: 4px
            color: #000
#posts-list-container
  height: calc(100vh - 40px)
  overflow-y: scroll
  .post
    position: relative
    padding-left: 138px
    height: 81px
    border-bottom: 1px solid $border-color
    overflow: hidden
    .details
      position: absolute
      right: 0
      top: 0
      width: 161px
      color: $text-gray
      .vote-count
        line-height: 48px
        margin: 16px 0
        font-size: 20px
        float: left
        width: 80px
        border-right: 1px solid $border-color
        text-align: center
        &:before
          content: '\1F525'
      .user
        float: left
        width: 80px
        padding-top: 16px
        .user-avatar
          width: 30px
          height: 30px
          border-radius: 30px
          background-color: $text-gray
          margin: 0 auto
        .user-name
          font-size: 12px
          font-weight: lighter
          cursor: pointer
          text-align: center
          &:hover
            text-decoration: underline

    .preview
      width: 120px
      height: 64px
      background-color: #ccc
      border-radius: 3px
      position: absolute
      left: 8px
      top: 8px
      cursor: zoom-in
    .title
      font-weight: 500
      line-height: 14px
      cursor: pointer
      font-size: 12px
      padding-top: 12px
      margin-bottom: 6px
      height: 40px
      text-overflow: ellipsis
      overflow: hidden
      line-clamp: vertical
      -webkit-line-clamp: 2
      box-orient: vertical
      -webkit-box-orient: vertical
      display: block
      display: -webkit-box
      width: calc(100% - 200px)

    .tags
      .tag
        opacity: 0.5
        background-color: $green
        background: linear-gradient(to right, $green 0%, ($green - #111) 100%)
        border-radius: 2px
        display: inline-block
        color: #fff
        font-size: 8px
        line-height: 16px
        cursor: pointer
        &.main
          opacity: 1
        &:hover
          opacity: 0.9
        .name
          text-transform: uppercase
          float: left
          padding: 0 6px
        .count
          float: left
          border-left: 1px solid rgba(255,255,255,0.5)
          padding: 0 6px
